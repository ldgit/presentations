{
  "name": "presentations",
  "version": "1.0.0",
  "description": "Various teaching presentations",
  "main": "index.js",
  "scripts": {
    "formatting": "prettier *.{js,jsx,css,json,md} --check",
    "slides:watch": "rimraf docs && cpy src/images/**/* docs/images && marp --watch",
    "build": "npm run formatting && rimraf docs && cpy src/images/**/* docs/images && marp"
  },
  "keywords": [
    "javascript"
  ],
  "author": "Danko Lučić",
  "license": "MIT",
  "devDependencies": {
    "@marp-team/marp-cli": "^0.17.0",
    "cpy-cli": "^3.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  },
  "marp": {
    "inputDir": "./src",
    "output": "docs",
    "themeSet": "./themes",
    "html": true
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
